$(document).ready(function(){       
   var scroll_start = 0;
   var startchange = $('.topbar');
   var offset = startchange.offset();
    if (startchange.length){
   $(document).scroll(function() { 
      scroll_start = $(this).scrollTop();
      if(scroll_start > offset.top) {
          $(".tz-header").css('background-color', '#fff');
          $(".tz-header").css('top', '0px');
        //  $(".tz-header").css('position', 'sticky');
       } else {
          $('.tz-header').css('background-color', 'transparent');
          $(".tz-header").css('top', '60px');
        //  $(".tz-header").css('position', 'relative');
       }
   });
    }
});




